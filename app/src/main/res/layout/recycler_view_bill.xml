<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--Desk-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/imvBG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/s1" />
                <!--android:scaleType="fitXY"-->

                <!--Zone-->
                <TextView
                    android:id="@+id/txtZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Zone 11"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <!--Desk-->
                <TextView
                    android:id="@+id/txtDesk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="11"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <!--android:layout_centerInParent="true"-->


            </RelativeLayout>


            <!--Content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txtDetail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 2"
                    android:textSize="@dimen/h3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtDetail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Line 3"
                    android:textSize="@dimen/h3"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow64"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>



    <View
        android:layout_marginLeft="77dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />


</LinearLayout>